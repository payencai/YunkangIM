<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:left="4dp" android:top="1dp">
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="30dip" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <!-- 第一层 -->
            <item android:left="0.5dp" android:top="0.5dp">
                <shape>
                    <solid android:color="#e2e2e2" />
                    <corners android:radius="10dip" />
                    <!-- 描边 -->
                    <stroke android:width="0.5dp" android:color="#e2e2e2" />
                </shape>
            </item>
            <!-- 第二层 -->
            <item
                android:left="1dp"
                android:bottom="0.5dp" android:right="0.5dp">
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="11dip" />
                    <!-- 描边 -->
                    <stroke android:width="0.5dp" android:color="#e2e2e2" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
