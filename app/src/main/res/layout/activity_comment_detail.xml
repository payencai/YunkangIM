<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".study.CommentDetailActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:background="@color/color_blue"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:padding="15dp"
            android:src="@mipmap/ic_white_back"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:text="详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.yunkang.chat.view.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="32dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ic_default_head"
                    android:layout_height="32dp" />
                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_name"
                            android:textSize="13sp"
                            android:textColor="@color/color_666"
                            android:text="用户名称"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_alignParentRight="true"
                            android:textSize="13sp"
                            android:textColor="@color/color_999"
                            android:text="2019-02-09"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_content"
                        android:textColor="@color/color_333"
                        android:layout_marginTop="5dp"
                        android:textSize="13sp"
                        android:text="这是评论内容这是评论内容这是评论内容这是评论内容这是评论内容这是评论内容这是评论内容"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:id="@+id/ll_num"
                        android:gravity="center_vertical"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/ic_comment"
                            android:layout_width="22dp"
                            android:layout_height="22dp" />
                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_marginLeft="2dp"
                            android:textSize="13sp"
                            android:textColor="#999999"
                            android:text="3201"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_above="@id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color_333"
                    android:layout_marginLeft="15dp"
                    android:text="全部回复"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/rv_reply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_bottom"
                android:background="@color/white"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <View

                    android:background="#f3f3f3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout

                        android:paddingLeft="15dp"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/tv_send"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_comment"
                            android:textSize="15sp"
                            android:textColorHint="#ccc"
                            android:hint="我来说几句…"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <View
                            android:layout_marginTop="5dp"
                            android:background="#f3f3f3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"></View>
                    </LinearLayout>
                    <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/tv_send"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="发布"
                        android:background="@drawable/bg_blue_login"
                        android:layout_width="68dp"
                        android:layout_height="32dp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>