<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_orderNumber"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:text="订单号：153486516848847684"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_status"
                    android:layout_marginRight="5dp"
                    android:text="等待付款"
                    android:textColor="#499FE5"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_name"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:text="受检信息：姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_date"
                    android:layout_marginRight="5dp"
                    android:text="09/01"
                    android:textColor="#555"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:id="@+id/rv_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_time"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_clock"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
                <TextView
                    android:id="@+id/tv_time"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_wuliu"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:textColor="#499FE5"
                    android:layout_centerVertical="true"
                    android:text="已呼叫物流"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_delete"
                        android:layout_marginRight="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_999"
                        android:gravity="center"
                        android:text="删除订单"
                        android:background="@drawable/bg_collect"

                        android:layout_width="@dimen/dp_85"
                        android:layout_height="@dimen/dp_30" />
                    <TextView
                        android:id="@+id/tv_pay"
                        android:textSize="14sp"
                        android:textColor="@color/color_blue"
                        android:gravity="center"
                        android:text="付款"
                        android:background="@drawable/bg_undo"
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="@dimen/dp_30" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>