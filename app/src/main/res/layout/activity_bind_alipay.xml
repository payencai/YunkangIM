<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine.activity.BindAlipayActivity">

    <include layout="@layout/commom_header"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#F22750" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="号为必选或必填项"
            android:textColor="@color/color_999"
            android:textSize="13sp" />


    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="*"
            android:textColor="#F22750" />
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="真实姓名"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:background="@color/white"
            android:hint="请输入真实姓名"
            android:maxLength="30"
            android:textColorHint="#ccc"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="*"
            android:textColor="#F22750" />
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="支付宝账号"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:background="@color/white"
            android:hint="请输入支付宝账号"
            android:maxLength="30"
            android:textColorHint="#ccc"
            android:textSize="14sp" />
    </LinearLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/tv_phone"
            android:text="手机号"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/tv_phone"
            android:background="@color/white"
            android:hint="请输入手机号"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColorHint="#ccc"
            android:textSize="14sp" />


    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_code"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验证码"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/tv_code"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:maxLength="6"
            android:textColorHint="#ccc"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_shape_sendcode"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/color_blue"
            android:textSize="12sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_reg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_blue_login"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>