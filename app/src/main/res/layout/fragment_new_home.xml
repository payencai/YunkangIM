<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srlFooterTranslationViewId="@+id/viewpager">
                <com.scwang.smartrefresh.layout.header.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srlClassicsSpinnerStyle="FixedBehind"
                    app:srlPrimaryColor="#444"
                    app:srlAccentColor="@android:color/white"/>
                <android.support.design.widget.CoordinatorLayout
                    android:id="@+id/cl_content"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.design.widget.AppBarLayout
                        android:id="@+id/app_barlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.CollapsingToolbarLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:contentScrim="@android:color/transparent"
                            app:layout_scrollFlags="scroll|exitUntilCollapsed">
                            <LinearLayout
                                app:layout_collapseParallaxMultiplier="0.7"
                                app:layout_collapseMode="parallax"
                                android:fitsSystemWindows="true"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.youth.banner.Banner
                                    android:id="@+id/banner"
                                    android:layout_width="match_parent"
                                    android:layout_height="220dp"
                                    app:image_scale_type="fit_xy"
                                    android:background="@mipmap/bg_test"/>


                                    <android.support.v7.widget.CardView
                                        android:layout_marginTop="-30dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_gravity="center"
                                        app:cardBackgroundColor="#096260"
                                        app:cardCornerRadius="5dp"
                                        app:cardElevation="5dp"
                                        app:cardMaxElevation="10dp"
                                        app:cardPreventCornerOverlap="true"
                                        app:cardUseCompatPadding="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:background="@color/white"
                                            android:paddingTop="15dp"
                                            android:paddingBottom="15dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <LinearLayout
                                                android:id="@+id/ll_baogao"
                                                android:gravity="center_horizontal"
                                                android:orientation="vertical"
                                                android:layout_weight="1"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content">
                                                <ImageView
                                                    android:src="@mipmap/ic_check"
                                                    android:layout_width="@dimen/dp_48"
                                                    android:layout_height="@dimen/dp_48" />
                                                <TextView
                                                    android:layout_marginTop="5dp"
                                                    android:textSize="12sp"
                                                    android:textColor="@color/color_999"
                                                    android:text="检测报告"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" />
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_bulu"
                                                android:gravity="center_horizontal"
                                                android:orientation="vertical"
                                                android:layout_weight="1"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent">
                                                <ImageView
                                                    android:src="@mipmap/ic_bulu"
                                                    android:layout_width="@dimen/dp_48"
                                                    android:layout_height="@dimen/dp_48" />
                                                <TextView
                                                    android:layout_marginTop="5dp"
                                                    android:textSize="12sp"
                                                    android:textColor="@color/color_999"
                                                    android:text="检测补录"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" />
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_undo"
                                                android:gravity="center_horizontal"
                                                android:orientation="vertical"
                                                android:layout_weight="1"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent">
                                                <ImageView
                                                    android:src="@mipmap/ic_undo"
                                                    android:layout_width="@dimen/dp_48"
                                                    android:layout_height="@dimen/dp_48" />
                                                <TextView
                                                    android:layout_marginTop="5dp"
                                                    android:textSize="12sp"
                                                    android:textColor="@color/color_999"
                                                    android:text="待办事项"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" />
                                            </LinearLayout>
                                            <LinearLayout
                                                android:id="@+id/ll_collect"
                                                android:gravity="center_horizontal"
                                                android:orientation="vertical"
                                                android:layout_weight="1"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent">
                                                <ImageView
                                                    android:src="@mipmap/ic_collect"
                                                    android:layout_width="@dimen/dp_48"
                                                    android:layout_height="@dimen/dp_48" />
                                                <TextView
                                                    android:layout_marginTop="5dp"
                                                    android:textSize="12sp"
                                                    android:textColor="@color/color_999"
                                                    android:text="收藏夹"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" />
                                            </LinearLayout>
                                        </LinearLayout>
                                    </android.support.v7.widget.CardView>


                            </LinearLayout>


                            <android.support.v7.widget.Toolbar
                                android:id="@+id/toolbar"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_75"
                                app:contentInsetStart="0dp"
                                app:layout_collapseMode="pin">

                                <RelativeLayout

                                    android:id="@+id/rl_title"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:paddingBottom="@dimen/dp_10"
                                    android:paddingTop="@dimen/dp_35"
                                    android:paddingRight="@dimen/dp_10"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:id="@+id/ll_search"
                                        android:layout_toLeftOf="@id/iv_service"
                                        android:gravity="center_vertical"
                                        android:background="@drawable/bg_shape_alltransparent"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <ImageView
                                            android:layout_marginLeft="10dp"
                                            android:src="@mipmap/ic_search"
                                            android:layout_width="@dimen/dp_14"
                                            android:layout_height="@dimen/dp_14" />
                                        <TextView
                                            android:layout_marginLeft="10dp"
                                            android:textColorHint="@color/white"
                                            android:background="@color/alltransparent"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:text="搜索相关内容"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>
                                    <ImageView
                                        android:layout_marginLeft="10dp"
                                        android:id="@+id/iv_service"
                                        android:layout_toLeftOf="@id/iv_msg"
                                        android:src="@mipmap/ic_new_service"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp" />
                                    <ImageView
                                        android:layout_marginLeft="10dp"
                                        android:id="@+id/iv_msg"
                                        android:layout_alignParentRight="true"
                                        android:src="@mipmap/ic_new_msg"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp" />
                                </RelativeLayout>
                            </android.support.v7.widget.Toolbar>

                        </android.support.design.widget.CollapsingToolbarLayout>

                        <com.flyco.tablayout.SlidingTabLayout
                            android:id="@+id/tab_layout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@android:color/white"
                            app:tl_indicator_color="@color/color_blue"
                            app:tl_indicator_corner_radius="30dp"
                            app:tl_indicator_height="3dp"
                            app:tl_indicator_width_equal_title="false"
                            app:tl_tab_padding="15dp"
                            app:tl_indicator_width="30dp"
                            app:tl_tab_space_equal="false"
                            app:tl_textSelectColor="@color/color_blue"
                            app:tl_textUnselectColor="@android:color/black"
                            app:tl_textsize="14sp" />
                        <View

                            android:background="#f3f3f3"
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"></View>
                    </android.support.design.widget.AppBarLayout>
                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        />
                    <RelativeLayout
                        android:visibility="gone"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        android:id="@+id/rl_empty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/ic_goods_empty"
                                android:layout_width="150dp"
                                android:layout_height="150dp" />
                            <TextView
                                android:textColor="@color/color_666"
                                android:textSize="14sp"
                                android:layout_marginTop="10dp"
                                android:text="暂无商品"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>


                </android.support.design.widget.CoordinatorLayout>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/ic_shopcar"
                android:id="@+id/iv_cart"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="20dp"
                android:contentDescription="@null"
                />
        </RelativeLayout>




    <!--</android.support.v4.widget.NestedScrollView>-->
</LinearLayout>
