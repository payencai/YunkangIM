<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.activity.RepotActivity">
    <include layout="@layout/commom_header"></include>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已出报告(40)"
                android:textColor="#499FE5"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_finish"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="#499FE5">

            </View>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_unfinish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_unfinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未出报告(60)"
                android:textColor="#999999"
                android:textSize="16sp" />

            <View
                android:visibility="gone"
                android:id="@+id/view_unfinish"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="#499FE5"
              >

            </View>
        </LinearLayout>
    </LinearLayout>
     <android.support.v7.widget.RecyclerView
         android:id="@+id/rv_report"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

     </android.support.v7.widget.RecyclerView>
</LinearLayout>